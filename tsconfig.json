{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"],
        "outDir": "dist",
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "inlineSources": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "dist"]
}
